{
  "name": "contexts-authz",
  "repository": {
    "url": "git+https://github.com/sgorshechnikov/contexts-authz.git"
  },
  "scripts": {
    "test": "jest",
    "clean": "tsc --build --clean",
    "build": "tsc --build --verbose",
    "lint": "npx eslint ."
  },
  "description": "Zanzibar inspired permission definition and resolution library",
  "author": "sgorshechnikov",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/node": "22.10.7",
    "eslint": "9.18.0",
    "jest": "29.7.0",
    "ts-jest": "29.2.5",
    "ts-node-dev": "2.0.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.21.0"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "./packages/authz-grammar/test",
      "./packages/authz-cli/test",
      "./packages/authz-dynamo/test"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "testTimeout": 120000
  }
}
